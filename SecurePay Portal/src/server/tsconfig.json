{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "../../dist/server",
    "rootDir": "../",
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "./**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "../../node_modules",
    "../../dist"
  ]
}
